<Page
    x:Class="OpenHeroSelectGUI.Tab_Info"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="15 10">
        <StackPanel>
            <TextBlock x:Uid="Info_About" Style="{ThemeResource SubtitleTextBlockStyle}" Margin="5"/>
            <TextBlock Text=" " FontSize="12" TextWrapping="Wrap" Margin="0 0 0 10"/>
            <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Margin="5 0">
                <Run x:Uid="AppName"/>
                <Run Text="{x:Bind Cfg.GUI.VersionDescription, Mode=OneWay}"/>
            </TextBlock>
            <TextBlock x:Uid="Info_AboutDescription"
                       HorizontalAlignment="Left"
                       Margin="20 5"
                       MaxWidth="320"
                       Style="{ThemeResource BodyTextBlockStyle}" />
            <HyperlinkButton x:Uid="Info_Link" Margin="5" NavigateUri="{x:Bind Cfg.GUI.GitHub}" />
        </StackPanel>
    </Grid>
</Page>
